<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.rubiksolver_controller.LeftActivity"
    tools:showIn="@layout/activity_left"
    android:background="#000000">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Left Face - select colors"
        android:id="@+id/textView"
        android:textColor="#ffffff"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_weight="1" />

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:id="@+id/tableLayout"
        android:layout_weight="1"
        android:layout_gravity="center">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="84dp"
                android:layout_height="84dp"
                android:text=" "
                android:id="@+id/button"
                android:layout_column="0"
                android:onClick="changeColorLeft11"
                android:background="#b0b0b0"
                android:layout_margin="2dp"/>

            <Button
                android:layout_width="84dp"
                android:layout_height="84dp"
                android:text=" "
                android:id="@+id/button2"
                android:layout_column="1"
                android:onClick="changeColorLeft12"
                android:background="#b0b0b0"
                android:layout_margin="2dp"/>

            <Button
                android:layout_width="84dp"
                android:layout_height="84dp"
                android:text=" "
                android:id="@+id/button3"
                android:layout_column="2"
                android:onClick="changeColorLeft13"
                android:background="#b0b0b0"
                android:layout_margin="2dp"/>
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="84dp"
                android:layout_height="84dp"
                android:text=" "
                android:id="@+id/button4"
                android:layout_column="0"
                android:onClick="changeColorLeft21"
                android:background="#b0b0b0"
                android:layout_margin="2dp"/>

            <Button
                android:layout_width="84dp"
                android:layout_height="84dp"
                android:text=" "
                android:id="@+id/button5"
                android:layout_column="1"
                android:onClick="changeColorLeft22"
                android:background="#b0b0b0"
                android:layout_margin="2dp"/>

            <Button
                android:layout_width="84dp"
                android:layout_height="84dp"
                android:text=" "
                android:id="@+id/button6"
                android:layout_column="2"
                android:onClick="changeColorLeft23"
                android:background="#b0b0b0"
                android:layout_margin="2dp"/>
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="84dp"
                android:layout_height="84dp"
                android:text=" "
                android:id="@+id/button7"
                android:layout_column="0"
                android:onClick="changeColorLeft31"
                android:background="#b0b0b0"
                android:layout_margin="2dp"/>

            <Button
                android:layout_width="84dp"
                android:layout_height="84dp"
                android:text=" "
                android:id="@+id/button8"
                android:layout_column="1"
                android:onClick="changeColorLeft32"
                android:background="#b0b0b0"
                android:layout_margin="2dp"/>

            <Button
                android:layout_width="84dp"
                android:layout_height="84dp"
                android:text=" "
                android:id="@+id/button9"
                android:layout_column="2"
                android:onClick="changeColorLeft33"
                android:background="#b0b0b0"
                android:layout_margin="2dp"/>
        </TableRow>

    </TableLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tableLayout"
        android:layout_centerHorizontal="true"
        android:stretchColumns="*"
        android:layout_weight="1"
        android:layout_gravity="center">

        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="0dp">

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="     front     "
                android:id="@+id/front"
                android:layout_column="0"
                android:onClick="leftGoFront"
                android:textColor="#ffffff"
                android:background="@drawable/facebuttons"
                android:layout_margin="2dp"
                android:layout_weight="1" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  next  "
                android:id="@+id/next"
                android:layout_column="1"
                android:onClick="leftGoRight"
                android:textColor="#ffffff"
                android:background="@drawable/nextbutton"
                android:layout_margin="2dp"
                android:layout_weight="1" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="     back      "
                android:id="@+id/back"
                android:layout_column="2"
                android:onClick="leftGoBack"
                android:textColor="#ffffff"
                android:background="@drawable/facebuttons"
                android:layout_margin="2dp"
                android:layout_weight="1" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="reset"
                android:id="@+id/home"
                android:layout_column="3"
                android:onClick="home"
                android:textColor="#ffffff"
                android:background="@drawable/homebutton"
                android:layout_margin="2dp"
                android:layout_weight="1" />
        </TableRow>

        <TableRow
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="   top    "
                android:id="@+id/top"
                android:layout_column="0"
                android:onClick="leftGoTop"
                android:textColor="#ffffff"
                android:background="@drawable/facebuttons"
                android:layout_margin="2dp"
                android:layout_weight="1" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  bottom  "
                android:id="@+id/bottom"
                android:layout_column="1"
                android:onClick="leftGoBottom"
                android:textColor="#ffffff"
                android:background="@drawable/facebuttons"
                android:layout_margin="2dp"
                android:layout_weight="1" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  right  "
                android:id="@+id/right"
                android:layout_column="2"
                android:onClick="leftGoRight"
                android:textColor="#ffffff"
                android:background="@drawable/facebuttons"
                android:layout_margin="2dp"
                android:layout_weight="1" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="view"
                android:id="@+id/view"
                android:layout_column="3"
                android:onClick="view"
                android:textColor="#ffffff"
                android:background="@drawable/viewbutton"
                android:layout_margin="2dp"
                android:layout_weight="1" />
        </TableRow>

    </TableLayout>


</LinearLayout>
